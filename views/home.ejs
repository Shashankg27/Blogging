<!doctype html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blogger</title>
</head>
<body>
    
    <%- include('./partials/nav') %>

    <div class="d-flex m-4 row row-cols-2">
      <% blogs.forEach(blog => { %>
        <div class="card m-2" style="width: 17rem;">
          <img src=<%= blog.coverImgURL %> class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
          </div>
        </div>
      <% }) %>
    </div>
    
    <%- include('./partials/script') %>
  </body>
</html>